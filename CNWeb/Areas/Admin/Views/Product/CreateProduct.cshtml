@{
    ViewBag.Title = "CreateProduct";
    Layout = "~/Areas/Admin/Views/Shared/Index.cshtml";
}

<h2>Create New Product</h2>
<form class="form-horizontal" action="CreateProduct" method="post">
    <hr />
    @Html.ValidationSummary()

    <div class="form-group row">
        <div class="col-2 col-form-label">ProductID</div>
        <div class="col-10">
            <input type="number" class="form-control" name="ProductID">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Name</div>
        <div class="col-10">
            <input type="text" class="form-control" name="ProductName">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Description</div>
        <div class="col-10">
            <input type="text" class="form-control" name="ProductDescription">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Price</div>
        <div class="col-10">
            <input type="number" class="form-control" name="ProductPrice">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Promotion Price</div>
        <div class="col-10">
            <input type="number" class="form-control" name="PromotionPrice">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Show Image</div>
        <div class="col-10">
            <input type="text" class="form-control" name="ShowImage">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Detail Image 1</div>
        <div class="col-10">
            <input type="text" class="form-control" name="DetailImage_1">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Detail Image 2</div>
        <div class="col-10">
            <input type="text" class="form-control" name="DetailImage_2">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Detail Image 3</div>
        <div class="col-10">
            <input type="text" class="form-control" name="DetailImage_3">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Product Stock</div>
        <div class="col-10">
            <input type="number" class="form-control" name="ProductStock">
        </div>
    </div>


    <div class="form-group row">
        <div class="col-2 col-form-label">Category</div>
        <div class="col-10">
            <select name="CategoryID" id="" class="form-control">
                @foreach (var item in ViewBag.Cate)
                {
                    <option value="@item.CategoryID">@item.CategoryName</option>
                }
            </select>
            <!-- <input type="text" class="form-control"> -->
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Color</div>
        <div class="col-10">
            <select name="OptionID" id="" class="form-control">
                @foreach (var item in ViewBag.Option)
                {
                    <option value="@item.OptionID">@item.OptionName</option>
                }
            </select>
            <!-- <input type="text" class="form-control"> -->
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Status</div>
        <div class="col s12">
            <input id="stt_cb" type="checkbox" checked="checked" value="true" class="form-control" name="ProductStatus" />
            <label for="stt_cb" id="cb_lb">Active</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</form>