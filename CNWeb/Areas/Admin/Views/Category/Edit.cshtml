
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Index.cshtml";
}

<h2>Update Category</h2>
<form class="form-horizontal" action="Edit" method="post">
    <hr />
    @Html.ValidationSummary()

    <div class="form-group row">
        <div class="col-2 col-form-label">Category ID</div>
        <div class="col-10">
            <input type="number" value="@ViewBag.CategoryID" class="form-control" name="CategoryID" readonly>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 col-form-label">Name</div>
        <div class="col-10">
            <input type="text" class="form-control" name="CategoryName">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 col-form-label">Meta keyword</div>
        <div class="col-10">
            <input type="text" class="form-control" name="MetaKeyword">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-default" />
        </div>
    </div>
</form>

