
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

    <link href="~/Assets/css/styleRegister.css" rel="stylesheet" />
<<div class="Register wrapper">
		<h1>Creative SignUp Form</h1>
		<div class="main-agileinfo">
          <div class="agileits-top">>

        <div>
            @if (TempData["AlertMessage"] != null)
            {
                <div id="AlertBox" class="alert @TempData["AlertType"] ">
                    @TempData["AlertMessage"]
                </div>
            }
        </div>
        <form method="post">
            <div class="row">
                <h>Account</h>
                <div class="input-group input-group-icon">
                    <input type="text" name="FullName" placeholder="Full Name" required="" />
                    <div class="input-icon">
                        <i class="fa fa-user" style="padding-top:6px ; font-size:x-large;"></i>
                    </div>
                </div>
                <div class="input-group input-group-icon">
                    <input type="text" name="UserName" placeholder="User Name" required="" />
                    <div class="input-icon">
                        <i class="fa fa-user-circle" style="padding-top:6px ; font-size:x-large;"></i>
                    </div>
                </div>
                <div class="input-group input-group-icon">
                    <input type="password" name="PassWord" placeholder="PassWord" required="" />
                    <div class="input-icon">
                        <i class="fa fa-key" style="padding-top:6px ; font-size:x-large;"></i>
                    </div>
                </div>
                <div class="input-group input-group-icon">
                    <input type="password" name="RePassWord" placeholder="RepeatPassWord" required="" />
                    <div class="input-icon">
                        <i class="fa fa-key" style="padding-top:6px ; font-size:x-large;"></i>
                    </div>
                </div>
                <div class="input-group input-group-icon">
                    <input type="email" name="Email" placeholder="Email Adress" required="" />
                    <div class="input-icon">
                        <i class="fa fa-envelope" style="padding-top:6px ; font-size:x-large;"></i>
                    </div>
                </div>

                <div class="input-group input-group-icon">
                    <input type="PhoneNumber" placeholder="PhoneNumber" required="" />
                    <div class="input-icon">
                        <i class="fa fa-phone" style="padding-top:6px ; font-size:x-large;"></i>
                    </div>
                </div>
                <input type="submit" value="SIGNUP">
            </div>

            <div class="row">
                <h>Terms and Conditions</h>
                <div class="input-group">
                    <input id="terms" type="checkbox" />
                    <label for="terms">
                        <span>I Agree To The <a href="https://www.youtube.com/watch?v=5iMx3tlpFeYhttps://www.youtube.com/watch?v=5iMx3tlpFeY">Terms & Conditions</a> </span>
                    </label>
                </div>
                <div>
                    <p>
                        Don't have an Account?
                        <a href="/Account/login"> Login Now!</a>
                    </p>
                </div>
            </div>
        </form>

</div>
            
    </div>
</div>

